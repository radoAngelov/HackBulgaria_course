<p id="notice"><%= notice %></p>

<h1>List of all lectures</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @lectures.empty? %>
      <strong> No lectures yet </strong>
    <% else %>
      <% @lectures.each do |lecture| %>
        <tr>
          <td><%= lecture.name %></td>
          <td><%= link_to 'Show', lecture %></td>
          <td><%= link_to 'Edit', edit_lecture_path(lecture) %></td>
          <td><%= link_to 'Destroy', lecture, method: :delete, data: { confirm: 'Are you sure, you cannot restore it!!!' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lecture', new_lecture_path %>
<%= link_to 'Home Page', lectures_path %>
